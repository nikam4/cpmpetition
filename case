 create table issuerecord(id int primary key,copyid int,memberid int,issue_date datetime,return_duedate datetime,return_date datetime,fine_amount int,foreign key(copyid)references copies(id),foreign key (memberid)references users (id));

+----+--------+----------+---------------------+---------------------+---------------------+-------------+
| id | copyid | memberid | issue_date          | return_duedate      | return_date         | fine_amount |
+----+--------+----------+---------------------+---------------------+---------------------+-------------+
|  4 |      1 |        1 | 2019-05-13 02:19:13 | 2019-06-17 04:48:53 | 2019-09-26 00:00:00 |        1500 |
+----+--------+----------+---------------------+---------------------+---------------------+-------------+
1 row in set (0.00 sec)
